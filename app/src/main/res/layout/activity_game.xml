<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.hfad.com.sudoku.GameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#449a9c9a"
        >
        <RelativeLayout
            android:id="@+id/info_panel"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal"
            android:layout_margin="20px"
            android:layout_marginBottom="50px"
            >
            <ImageView
                android:id="@+id/timer_icon"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_toLeftOf="@id/timer"
                android:layout_centerVertical="true"
                android:src="@drawable/timer" />
            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="00:00"
                android:textColor="#464b47"
                android:textSize="70px"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10px"
                />
            <TextView
                android:id="@+id/difficult_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="20px"
                android:textSize="40px"
                />
            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textSize="10dp"
                android:gravity="center"
                android:onClick="onClickSubmit"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <GridView
            android:id="@+id/main_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:verticalSpacing="7px"
            android:horizontalSpacing="7px"
            android:background="@color/BOX_BACKGROUND_COLOR"
            android:layout_margin="20px"
            android:padding="9px"
            android:layout_below="@+id/info_panel"
            >
        </GridView>

        <GridView
            android:id="@+id/numpad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/BOX_BACKGROUND_COLOR"
            android:gravity="center"
            android:horizontalSpacing="3px"
            android:numColumns="5"
            android:padding="9px"
            android:verticalSpacing="3px"
            android:layout_marginTop="20px"
            android:layout_marginLeft="150px"
            android:layout_marginRight="150px"
            android:layout_below="@id/main_grid"
            android:visibility="invisible">
        </GridView>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
